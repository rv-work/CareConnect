{
  "expo": {
    "name": "MediCare",
    "slug": "MediCare",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "medicare",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "backgroundModes": [
        "background-fetch",
        "background-processing",
        "location"
      ],
      "infoPlist": {
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs location access to send emergency alerts with your location in case of an accident.",
        "NSLocationWhenInUseUsageDescription": "This app needs location access to send emergency alerts with your location in case of an accident."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/login.jpg",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.rv111.MediCare",
      "permissions": [
        "WAKE_LOCK",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "FOREGROUND_SERVICE",
        "ACCESS_BACKGROUND_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "SEND_SMS",
        "READ_PHONE_STATE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/login.jpg",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-background-fetch",
        {
          "backgroundFetchInterval": 15
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#ffffff",
          "defaultChannel": "emergency"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "This app needs location access to send emergency alerts with your location in case of an accident.",
          "locationWhenInUsePermission": "This app needs location access to send emergency alerts with your location in case of an accident."
        }
      ],
      "expo-background-task"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
